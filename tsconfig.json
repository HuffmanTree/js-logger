{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2022", "dom"],
    "module": "node16",
    "moduleResolution": "node16",
    "target": "ES2022",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
